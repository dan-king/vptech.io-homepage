<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Viewpoint Technical Homepage</title>
        <meta name="description" content="Viewpoint Technical Homepage">
        <link rel="stylesheet" type="text/css" href="/bootstrap4/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/datatables_bootstrap4/css/dataTables.bootstrap4.min.css">
        <script src="/jquery3.5.1/jquery.min.js"></script>
        <script src="/datatables/jquery.dataTables.min.js"></script>
        <script src="/datatables_bootstrap4/js/dataTables.bootstrap4.min.js"></script>

        <style>
            body, html {
            height: 100%;
            margin: 0;
            }
            body {
            font-family: Arial, Helvetica, sans-serif;
            }
            .body-background {
            /* The image used */
            background-image: url("/img/background.png");

            /* Full height */
            height: 100%;

            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            }
            .corner10 {
                padding: 20px;
                border:1px solid #ccc;
                border-radius: 10px;
                -moz-border-radius: 10px;
                -webkit-border-radius: 10px;
            }
        </style>
    </head>
    <body class="body-background">
        <div class="container-fluid">
            {{{body}}}
            <div>
                <p style="font-size: xx-small;">
                    <span class="corner10" style="background-color: white; margin:10px; padding:10px; opacity: 0.7;">
                        &copy; Copyright {{ copyrightYear }} {{ copyrightHolder }}
                    </span>
                </p>
            </div>
        </div>
    </body>
</html>
